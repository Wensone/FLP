(defun sum(x y)
(if (>= (length x) 1)
  (cond 
	((numberp (car x)) (append (list (+ (car x) y)) (sum (cdr x) y)))
	((listp (car x)) (cons (sum (car x) y) (sum (cdr x) y)))
	(t (append (list(car x)) (sum (cdr x) y)))) 
  nil))
(shift)
(print (shift '(1 -1 a (5 4 (a c (22)))) 2))
(print (acopy 'c 4))
